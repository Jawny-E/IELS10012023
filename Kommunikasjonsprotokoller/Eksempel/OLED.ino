void setup() {
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { // Standard I2C addresse for skjermen: 0x3C
    Serial.println(F("Klarte ikke å koble til skjermen"));
    for(;;);
  }
  //Setter opp generelle innstillinger
  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(WHITE);
}

void loop() {
  //Print en setning
  display.setCursor(0,10);
  display.print("The man, the myth, the legend...");
  display.display();
  delay(5000);
  display.clearDisplay();
  //Tegn ett bilde
  display.drawBitmap(0, 0, myBitmap, 64, 64, WHITE);
  display.display();
  delay(5000);
  display.clearDisplay();
}
